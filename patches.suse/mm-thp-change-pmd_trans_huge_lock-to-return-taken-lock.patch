 			return -1;
 		} else {
@@ -1560,7 +1574,7 @@ int __pmd_trans_huge_lock(pmd_t *pmd, st
 			return 1;
 		}
 	}
-	spin_unlock(&vma->vm_mm->page_table_lock);
+	spin_unlock(*ptl);
 	return 0;
 }
 
